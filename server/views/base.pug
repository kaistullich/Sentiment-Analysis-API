//- base.pug
html
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		title #{title}
		// fontawesome cdn
		link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet")
		// bootstrap
		link(rel="stylesheet", href="/css/bootstrap.min.css")
		// base.css file
		link(href="/css/base.css" rel="stylesheet")
		// jQuery 3.2.1
		script(src="https://code.jquery.com/jquery-3.2.1.js"
		integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="
		crossorigin="anonymous")
		// Bootstrap JS
		script(src="/js/bootstrap.min.js")
		block head

	body
		// navbar
		nav.navbar.navbar-inverse.navbar-fixed-top
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#') Project name
				#navbar.collapse.navbar-collapse
					ul.nav.navbar-nav
						li.active
							a(href='#') Home
						li
							a(href='#about') About
						li
							a(href='#contact') Contact
				// /.nav-collapse

		// content for the whole page
		div.container#base-content-container
			block content
		// begin footer
		footer
			div.footer#footer
				div.container
					div.row
						// navigation links
						div(class="col-lg-4 col-md-3 col-sm-12 col-xs-6")
							h3.text-center Navigation
							ul
								li
									a(href="#") Link #1
								li
									a(href="#") Link #2
								li
									a(href="#") Link #3
								li
									a(href="#") Link #4
						// Contact section
						div(class="col-lg-4 col-md-5 col-sm-12 col-xs-12")
							h3.text-center Get in contact with me!
							ul
								li
									div(class="submit contact-box")
										textarea(class="form-control" id="textarea" placeholder="Questions / Inquires. . .")
										br
										input(type="submit" value="Submit" class="btn btn-grey form-control" placeholder="Submit" id="submit")
							// social-media images/links
						div(class="col-lg-4 col-md-4 col-sm-12 col-xs-12")
							h3 Follow me here!
							ul.social
								li
									a(href="https://www.facebook.com/profile.php?id=100008360227661")
										i(class="fa fa-facebook" aria-hidden="true")
								li
									a(href="https://github.com/kaistullich")
										i(class="fa fa-github" aria-hidden="true")
								li
									a(href="https://www.linkedin.com/in/kai-stullich-a0697a91/")
										i(class="fa fa-linkedin" aria-hidden="true")
					div.row#footer-bottom
						div.container
							- var currentYear = new Date().getFullYear();
							p.text-center Created by Kai Stullich - Copyright &copy #{currentYear}
			// end footer