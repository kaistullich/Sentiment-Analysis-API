//- base.pug
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title #{title}
    link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet")
    link(href="/css/base.css" rel="stylesheet")
    block scripts
  body
    // content for the whole page
    block content
    // begin footer
    footer
      div.footer#footer
        div.container
          div.row
            // navigation links
            div(class="col-lg-4 col-md-3 col-sm-12 col-xs-6")
              h3.text-center Navigation
              ul
                li
                  a(href="#") Link #1
                li
                  a(href="#") Link #2
                li
                  a(href="#") Link #3
                li
                  a(href="#") Link #4
            // Contact section
            div(class="col-lg-4 col-md-5 col-sm-12 col-xs-12")
              h3.text-center Get in contact with me!
              ul
                li
                  div(class="submit contact-box")
                    textarea(class="form-control" id="textarea" placeholder="Questions / Inquires. . .")
                    br
                    input(type="submit" value="Submit" class="btn btn-grey form-control" placeholder="Submit" id="submit")
              // social-media images/links
            div(class="col-lg-4 col-md-4 col-sm-12 col-xs-12")
              h3 Follow me here!
              ul.social
                li
                  a(href="https://www.facebook.com/profile.php?id=100008360227661")
                    i(class="fa fa-facebook" aria-hidden="true")
                li
                  a(href="https://github.com/kaistullich")
                    i(class="fa fa-github" aria-hidden="true")
                li
                  a(href="https://www.linkedin.com/in/kai-stullich-a0697a91/")
                    i(class="fa fa-linkedin" aria-hidden="true")
          div.row#footer-bottom
            div.container
              - var currentYear = new Date().getFullYear();
              p.text-center Created by Kai Stullich - Copyright &copy #{currentYear}
      // end footer