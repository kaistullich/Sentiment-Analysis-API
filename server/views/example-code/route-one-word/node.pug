    code.javascript.
        // install request-promise module
        // npm install request-promise

        // require module
        const request = require('request-promise');

        // create object
        const payload = {
            // set the method type
            method: 'GET',
            // url for request
            uri: 'http://localhost:5000/api/v1/one-word/funny',
            // JSON stringifies the body automatically
            json: true
        };

        // create & send the request for the word "funny"
        request(payload)
            // success
            .then(function (response) {
            console.log(JSON.stringify(response, undefined, 2));
            })
            // error
            .catch(function (err) {
            console.log(err);
            });